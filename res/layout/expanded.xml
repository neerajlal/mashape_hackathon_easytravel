<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ex2"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="175dp"
        android:weightSum="10" >
        

        
        <TextView
            android:id="@+id/to_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="To"
            android:textColor="#FFFFFF" />
        
        <TextView
            android:id="@+id/from_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="SIN"
            android:layout_weight="5" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#1B1E50"
            android:paddingRight="20dp"
            android:text="To "
            android:layout_weight="5" />
        
        <TextView
            android:id="@+id/to_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="#FFFFFF"
            android:text="SIN" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#1B1E50"
            android:text="From "
            android:layout_weight="5" />
        
        <TextView
            android:id="@+id/from_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
               android:textColor="#FFFFFF"
            android:text="SIN" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        android:background="@drawable/coulmn" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:paddingRight="10dp"
                android:text="Date " />

            <TextView
                android:id="@+id/from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textColor="#4F69A3"
                android:text="SIN" />
            
        </LinearLayout>
       
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                 android:gravity="center"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:text="Airline " />

            <TextView
                android:id="@+id/airline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="airline"
                android:textColor="#4F69A3" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                 android:gravity="center"
                 android:paddingRight="10dp"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:text="Gate " />

            <TextView
                android:id="@+id/gate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textColor="#4F69A3"
                android:text="NA" />
            
        </LinearLayout>
        
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="20dp"
        android:weightSum="10" >
        
        <ImageView
            android:id="@+id/weather_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:paddingLeft="20dp"
            android:src="@drawable/weather" />
        
        <ImageView
            android:id="@+id/chklist_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:paddingRight="20dp"
            android:src="@drawable/checklist" />

    </LinearLayout>
    
</LinearLayout>